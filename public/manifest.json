{
  "name": "First Extensions",
  "description": "Basic Chrome Extension",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "AIAgent"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/assets/content-script.js"]
    }
  ],
  "background": {
    "scripts": ["/assets/background.js"],
    "persistent": false
  },
  "icons": {
    "16": "extension-logo.svg",
    "48": "extension-logo.svg",
    "128": "extension-logo.svg"
  },
  "applications": {
    "gecko": {
      "id": "your-extension@example.com",
      "strict_min_version": "57.0"
    }
  },
  "permissions": ["storage", "activeTab", "tabs"]
}
